    "hono": "^4.4.7",
    "jsonwebtoken": "^9.0.2",
    "marked": "^13.0.0",
    "marked-highlight": "^2.1.3",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.14",
    "pg": "^8.12.0",
    "postgres": "^3.4.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bun": "latest",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node-cron": "^3.0.11",
