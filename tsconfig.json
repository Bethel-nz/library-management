{
  "compilerOptions": {
    "target": "ES2015",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~utils/*": ["src/utils/*"],
      "~utils*": ["src/utils"],
      "~src/*": ["src/*"],
      "~drizzle/*": ["drizzle/*"],
      "~*": ["./*"]
    }
  },
  "include": ["src/**/*", "schema/**/*", "**/*.d.ts"]
}
